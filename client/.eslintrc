{
    "parser": "babel-eslint",
    "rules": {
        "no-unused-vars": 0,
        "max-len": [1, 120, 2, {"ignoreComments": true}],
        "globals": {
            "document": false
        },
        "indent": ["error", "tab", {"ignoredNodes": ["JSXElement"]}],
        "no-tabs": 0,
        "no-underscore-dangle": [2, { "allow": [] }]
    }
}    